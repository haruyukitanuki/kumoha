{
  "include": ["src/**/*", "types/**/*"],
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2015",
    "module": "Node18",
    "moduleResolution": "nodenext",
    "lib": ["DOM", "ES2015"],

    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noUncheckedIndexedAccess": true,

    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,

    "declaration": true,
    "declarationMap": true,

    "rootDir": "src",
    "outDir": "lib"
  }
}
